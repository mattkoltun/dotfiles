{
  "pairs.alwaysPairCharacters": ["(", "[", "{", "'", "\"", "`"],
  "pairs.enableBackspace": true,
  "coc.source.emoji.filetypes": null,
  "codeLens.enable": true,
  "diagnostic.errorSign": "✖",
  "diagnostic.hintSign": "⚑",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "•",
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.refreshAfterSave": true,

  "suggest.defaultSortMethod": "alphabetical",
  "suggest.detailField": "preview",
  "suggest.detailMaxLength": 150,
  "suggest.enablePreview": false,
  "suggest.maxPreviewWidth": 65,
  "suggest.removeDuplicateItems": true,
  "suggest.autoTrigger": "always",
  "suggest.timeout": 2000,
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 350,
  "suggest.noselect": false,

  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },

  "coc.source.file.ignoreHidden": false,
  "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json"],
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnInsertLeave": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "javascript.jsx",
    "typescript",
    "typescriptreact",
    "typescript.tsx",
    "html",
    "json",
    "css",
    "Markdown"
  ],

  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.statusItemText": "ⓟ ",
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": false,

  "tsserver.enable": true,
  "tsserver.log": "normal",
  "tsserver.maxTsServerMemory": 3000,
  "tsserver.enableJavascript": true,
  "typescript.suggest.enabled": true,

  "typescript.preferences.quoteStyle": "single",

  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.autoFix": true,
  "eslint.run": "onType",
  "eslint.filetypes": [
    "javascript",
    "javascript.jsx",
    "javascriptreact",
    "typescript",
    "typescript.tsx",
    "typescriptreact"
  ],
  "python.jediEnabled": true,
  "python.linting.enabled": true,
  "python.linting.pep8Enabled": true,
  "cSpell.userWords": [
    "Fargate",
    "Koltun",
    "Metas",
    "Stringable",
    "antipattern",
    "cdkdemo",
    "codegen",
    "dataloader",
    "inmemory",
    "justdatguymat",
    "koltunm",
    "noindex",
    "nprogress",
    "postdev",
    "reinitializing",
    "repassword",
    "rerender",
    "resonse",
    "unfetch",
    "urql"
  ],
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {}
    }
  }
}
