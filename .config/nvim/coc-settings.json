{
  "pairs.alwaysPairCharacters": ["(", "[", "{", "'", "\"", "`"],
  "pairs.enableBackspace": true,
  "coc.source.emoji.filetypes": null,
  "codeLens.enable": true,
  "diagnostic.errorSign": "✖",
  "diagnostic.hintSign": "⚑",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "•",
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.refreshAfterSave": true,

  "suggest.detailField": "preview",
  "suggest.detailMaxLength": 100,
  "suggest.enablePreview": true,
  "suggest.maxPreviewWidth": 45,
  "suggest.removeDuplicateItems": true,
  "suggest.autoTrigger": "always",
  "suggest.timeout": 2000,
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 150,
  "suggest.noselect": false,

  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },

  "coc.source.file.ignoreHidden": false,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnInsertLeave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "typescript.tsx",
    "html",
    "json",
    "css",
    "Markdown"
  ],

  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.statusItemText": "ⓟ ",
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": false,

  "tsserver.enable": true,
  "tsserver.npm": "/usr/local/bin/npm",
  "tsserver.log": "normal",
  "tsserver.maxTsServerMemory": 3000,

  "typescript.preferences.quoteStyle": "single",

  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.autoFix": true,
  "eslint.run": "onSave",
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "cSpell.userWords": [
    "resonse",
    "urql"
  ]
}
